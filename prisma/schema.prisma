generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String   @unique
  password      String
  phone         String?
  address1      String?
  address2      String?
  role          String   @default("user") // user, doctor, admin
  profile_image String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relation: One user -> One doctor profile
  doctor        Doctor?
}

model Doctor {
  id         Int      @id @default(autoincrement())
  degree     String?
  specialty  String?
  experience String?
  fee        String?
  bio        String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Link to User
  userId     Int?     @unique
  user       User?     @relation(fields: [userId], references: [id])
}
